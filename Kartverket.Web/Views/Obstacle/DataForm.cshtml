@model Kartverket.Web.Models.ObstacleData
@{
    ViewData["Title"] = "Register Obstacle";
}

<section class="mx-auto max-w-4xl">
    <div class="bg-gray-300 rounded-3xl p-8 shadow-lg">
        <header class="mb-6">
            <h1 class="text-2xl font-semibold text-center">Obstacle Registration Form</h1>
        </header> <form asp-action="DataForm" method="post" class="space-y-5">

        <div class="grid gap-5 sm:grid-cols-2">
            <!-- Obstacle Name -->
            <div class="sm:col-span-2">
                <label asp-for="ObstacleName" class="block text-sm font-medium text-gray-800 mb-1">Obstacle Name</label>
                <input asp-for="ObstacleName"
                       class="block w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-3 py-2"
                       placeholder="e.g., Wall, Ramp" />
                <span asp-validation-for="ObstacleName" class="text-sm text-red-600"></span>
            </div>

            <!-- Height -->
            <div>
                <label asp-for="ObstacleHeight" class="block text-sm font-medium text-gray-800 mb-1">
                    Obstacle Height (meters)
                </label>
                <input asp-for="ObstacleHeight" type="number" step="0.01" min="0"
                       class="block w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-3 py-2"
                       placeholder="e.g., 2.5" />
                <span asp-validation-for="ObstacleHeight" class="text-sm text-red-600"></span>
            </div>

            <!-- Description -->
            <div class="sm:col-span-2">
                <label asp-for="ObstacleDescription" class="block text-sm font-medium text-gray-800 mb-1">
                    Obstacle Description
                </label>
                <textarea asp-for="ObstacleDescription" rows="4"
                          class="block w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-3 py-2"
                          placeholder="Describe the obstacle, materials, location, etc."></textarea>
                <span asp-validation-for="ObstacleDescription" class="text-sm text-red-600"></span>
            </div>
        </div>

            <!-- Kart seksjon -->
            <div class="mt-6">
                <label class="block text-base font-medium text-gray-900 mb-2">Select Obstacle Location</label>
                <p class="text-sm text-gray-600 mb-1">Click on the map to select the obstacle location</p>
                <div id="map" style="height: 300px;" class="mb-4 border rounded shadow"></div>

                <!-- Skjulte felter for koordinater -->
                <input type="hidden" asp-for="Latitude" id="Latitude" />
                <input type="hidden" asp-for="Longitude" id="Longitude" />
                <span asp-validation-for="Latitude" class="text-sm text-red-600"></span>
                <span asp-validation-for="Longitude" class="text-sm text-red-600"></span>

                <!-- Skjult felt for GeoJSON (punkt/linje) -->
                <input type="hidden" id="GeometryGeoJson" name="GeometryGeoJson" />

                <!-- Vis valgt posisjon -->
                <div id="selectedLocation" class="text-sm text-gray-700 mt-2 hidden">
                    Selected location: <span id="latDisplay"></span>, <span id="lngDisplay"></span>
                </div>
            </div>

            <div class="pt-2 flex gap-3">
                <button type="submit"
                        class="inline-flex items-center justify-center rounded-lg bg-gray-400 px-4 py-2 text-black hover:bg-gray-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-400">
                    Submit Data
                </button>
                <a asp-controller="Home" asp-action="Index"
                   class="inline-flex items-center rounded-lg bg-gray-400 px-4 py-2 text-black ring-1 ring-gray-300 hover:bg-gray-400">
                    Back to Home
                </a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <!-- Include Leaflet CSS and JS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

    <!-- Leaflet.Draw (for marker + polyline) -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet-draw@1.0.4/dist/leaflet.draw.css" />
    <script src="https://unpkg.com/leaflet-draw@1.0.4/dist/leaflet.draw.js"></script>
    
    <script>
        // Initialiserer kartet uten å sette en standard posisjon
        // Kartet vil vises som tomt til brukerens posisjon er hentet
        var map = L.map('map');
        var marker; // Variabel for å holde på markøren
        var userLocationCircle; // Variabel for nøyaktighetssirkelen
        var hasCentered = false; // Hindrer gjentatt re-sentrering

        // Legger til OpenStreetMap som bakgrunnskart
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '© OpenStreetMap contributors'
        }).addTo(map);

         // ---- Leaflet.Draw: marker + linje ----

        // Samler alt brukeren tegner
        var drawnItems = new L.FeatureGroup();
        map.addLayer(drawnItems);

        // Verktøylinje (kun marker og polyline for dette issuet)
        var drawControl = new L.Control.Draw({
            draw: { polygon: false, circle: false, rectangle: false, marker: true, polyline: true },
            edit: { featureGroup: drawnItems }
        });
        map.addControl(drawControl);

        // Når noe tegnes -> legg det til og oppdater skjulte felter
        map.on(L.Draw.Event.CREATED, function (e) {
            drawnItems.addLayer(e.layer);

            // Oppdater eksisterende skjulte felter når bruker lager markør
            if (e.layerType === 'marker') {
            var p = e.layer.getLatLng();
            document.getElementById('Latitude').value  = p.lat.toFixed(6);
            document.getElementById('Longitude').value = p.lng.toFixed(6);
            var latDisp = document.getElementById('latDisplay');
            var lngDisp = document.getElementById('lngDisplay');
            if (latDisp && lngDisp) { latDisp.textContent = p.lat.toFixed(6); lngDisp.textContent = p.lng.toFixed(6); }
            }

            // Hvis bruker lager linje, sett Lat/Lng til første punkt 
            if (e.layerType === 'polyline') {
            var pts = e.layer.getLatLngs();
            if (pts.length > 0) {
                document.getElementById('Latitude').value  = pts[0].lat.toFixed(6);
                document.getElementById('Longitude').value = pts[0].lng.toFixed(6);
                var latDisp = document.getElementById('latDisplay');
                var lngDisp = document.getElementById('lngDisplay');
                if (latDisp && lngDisp) { latDisp.textContent = pts[0].lat.toFixed(6); lngDisp.textContent = pts[0].lng.toFixed(6); }
            }
            }

            captureGeoJson();
        });

        // Hold GeoJSON oppdatert når bruker redigerer/sletter
        map.on('draw:edited',  captureGeoJson);
        map.on('draw:deleted', captureGeoJson);

        // Skriv hele tegne-laget til hidden-feltet
        function captureGeoJson() {
            var hidden = document.getElementById('GeometryGeoJson');
            if (!hidden) return;
            hidden.value = JSON.stringify(drawnItems.toGeoJSON());
        }    
        
        
    // Funksjon som kjøres når brukerens posisjon er funnet
        function onLocationFound(e) {
            // e.latlng inneholder latitude og longitude
            // e.accuracy inneholder nøyaktigheten i meter
            var radius = e.accuracy / 2; // Radius for nøyaktighetssirkel

            // Setter kartvisningen til brukerens posisjon med zoomnivå 13
            // Zoomnivå 13 er et godt nivå for å se detaljer i nærområdet
            if (!hasCentered) {
            map.setView(e.latlng, 13);
            hasCentered = true;
           }

            // Fjerner eksisterende markør hvis den finnes
            if (marker) {
                map.removeLayer(marker);
            }

            // Fjerner eksisterende nøyaktighetssirkel hvis den finnes
            if (userLocationCircle) {
                map.removeLayer(userLocationCircle);
            }

            // Legger til en markør på brukerens posisjon
            marker = L.marker(e.latlng).addTo(map)
                .bindPopup("Du er innenfor " + radius.toFixed(0) + " meter fra dette punktet")
                .openPopup();

            // Legger til en sirkel som viser nøyaktigheten til posisjonen
            userLocationCircle = L.circle(e.latlng, radius).addTo(map);

            // Oppdaterer de skjulte skjemafeltene med koordinatene
            document.getElementById('Latitude').value = e.latlng.lat;
            document.getElementById('Longitude').value = e.latlng.lng;

            // Viser den valgte lokasjonen i brukergrensesnittet
            document.getElementById('latDisplay').textContent = e.latlng.lat.toFixed(6);
            document.getElementById('lngDisplay').textContent = e.latlng.lng.toFixed(6);
            document.getElementById('selectedLocation').classList.remove('hidden');
        }

        // Funksjon som kjøres hvis det oppstår en feil ved posisjonshenting
        function onLocationError(e) {
            console.error("Feil ved henting av posisjon:", e.message);
            
            // Fallback: Setter kartet til Oslo sentrum hvis posisjon ikke kan hentes
            var fallbackLocation = [59.9139, 10.7522]; // Oslo sentrum
            map.setView(fallbackLocation, 10);
            
            // Legger til en markør på fallback-posisjonen
            marker = L.marker(fallbackLocation).addTo(map)
                .bindPopup("Kunne ikke hente din posisjon. Kartet viser Oslo sentrum.")
                .openPopup();

            // Oppdaterer skjemafeltene med fallback-koordinater
            document.getElementById('Latitude').value = fallbackLocation[0];
            document.getElementById('Longitude').value = fallbackLocation[1];
            
            // Viser fallback-posisjonen i brukergrensesnittet
            document.getElementById('latDisplay').textContent = fallbackLocation[0].toFixed(6);
            document.getElementById('lngDisplay').textContent = fallbackLocation[1].toFixed(6);
            document.getElementById('selectedLocation').classList.remove('hidden');

            alert("Kunne ikke hente din posisjon. Vennligst velg en lokasjon manuelt på kartet.");
        }

        // Setter opp event listeners for geolokalisering
        // 'locationfound' eventet trigges når posisjonen er hentet
        map.on('locationfound', onLocationFound);
        
        // 'locationerror' eventet trigges hvis det oppstår en feil
        map.on('locationerror', onLocationError);

        // Starter sporing av brukerens posisjon
        // Parameterne betyr:
        // watch: true - Fortsetter å spore posisjonen
        // setView: false - Ikke endre kartvisningen (vi gjør dette manuelt)
        // maxZoom: 16 - Maksimalt zoomnivå for autosenterering
        // timeout: 10000 - Maksimal ventetid på 10 sekunder
        // maximumAge: 30000 - Aksepterer en posisjon som er opptil 30 sekunder gammel
        map.locate({ 
            watch: true, 
            setView: false, 
            maxZoom: 16,
            timeout: 10000,
            maximumAge: 30000
        });

        // Event listener for når brukeren klikker på kartet for å velge en annen posisjon
        map.on('click', function (e) {
            // Fjerner eksisterende markør
            if (marker) {
                map.removeLayer(marker);
            }

            // Fjerner nøyaktighetssirkelen når bruker velger posisjon manuelt
            if (userLocationCircle) {
                map.removeLayer(userLocationCircle);
            }

            // Legger til ny markør på det klikkede stedet
            marker = L.marker(e.latlng).addTo(map);

            // Oppdaterer skjemafeltene med de nye koordinatene
            document.getElementById('Latitude').value = e.latlng.lat;
            document.getElementById('Longitude').value = e.latlng.lng;

            // Sørger for at klikk-markøren blir med i GeoJSON
            drawnItems.clearLayers();        // fjerner tidligere lag (valgfritt men ryddig)
            drawnItems.addLayer(marker);     // legger markøren til i FeatureGroup
            captureGeoJson();                // oppdaterer det skjulte feltet

            
            // Oppdaterer visningen av koordinatene
            document.getElementById('latDisplay').textContent = e.latlng.lat.toFixed(6);
            document.getElementById('lngDisplay').textContent = e.latlng.lng.toFixed(6);
            document.getElementById('selectedLocation').classList.remove('hidden');
        });

        // Validering for å sikre at en lokasjon er valgt før skjema sendes inn
        document.querySelector('form').addEventListener('submit', function (e) {
            var lat = document.getElementById('Latitude').value;
            var lng = document.getElementById('Longitude').value;
            
            if (!lat || !lng) {
                e.preventDefault(); // Stoppe skjemaets innsending
                alert('Vennligst velg en lokasjon på kartet før du sender inn skjemaet.');
                return; // Stopp videre kjøring
            }

        // ---- Oppdater GeoJSON rett før skjema sendes ----
        if (typeof captureGeoJson === 'function') {
          captureGeoJson();
        }
        });
    </script>

    <!-- Client-side validation -->
    <partial name="_ValidationScriptsPartial" />
}