@model IEnumerable<Kartverket.Web.Models.ActiveReportRow>

@* ---------------------------------------------------------------------------
    View: Active Reports
    Role: Registar
    Description: 
        Tabellvisning av alle rapporter som venter på godkjenning.
        Inkluderer avansert klientside-sortering (JS) for dato, status og ID.
    --------------------------------------------------------------------------- 
*@

@{
    ViewData["Title"] = "Active Reports";
}

<section class="mx-auto max-w-6xl pt-10 px-4">
    
    <div class="flex items-center justify-center gap-4 mb-8">
        @* Url.Content sikrer at logoen lastes korrekt uavhengig av server-path *@
        <img src="@Url.Content("~/images/Kartverketlogo.svg")"
             alt="Kartverket"
             class="h-16 w-auto" />
        <h1 class="text-4xl font-medium text-gray-900">
            Active Reports
        </h1>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="mb-6 max-w-2xl mx-auto bg-green-100 border border-green-400 text-green-700 px-6 py-4 rounded-xl shadow-sm">
            <div class="flex items-center">
                <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                @TempData["Message"]
            </div>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="bg-white shadow-md rounded-2xl p-12 border border-gray-200 text-center">
            <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-400 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
            </svg>
            <p class="text-gray-600 text-lg">No pending reports found.</p>
        </div>
    }
    else
    {
        <div class="bg-white shadow-md rounded-2xl border border-gray-200 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full table-auto divide-y divide-gray-200" id="reportsTable">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider cursor-pointer" data-sort="int">Report ID</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider cursor-pointer" data-sort="string">Status</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider cursor-pointer" data-sort="string">Height</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider cursor-pointer" data-sort="string">Created by</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider cursor-pointer" data-sort="date">Date</th>
                            <th class="px-6 py-4 text-right text-xs font-bold text-gray-600 uppercase tracking-wider">Action</th>
                        </tr>
                    </thead>

                    <tbody class="bg-white divide-y divide-gray-100">
                        @foreach (var row in Model)
                        {
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                        #@row.ReportId
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                        @row.Status
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-700">@row.Height</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="h-8 w-8 rounded-full bg-gray-200 flex items-center justify-center mr-3">
                                            <span class="text-xs font-medium text-gray-600">
                                                @* Sikkerhet: Sjekker for null/empty før Substring for å unngå runtime error *@
                                                @(!string.IsNullOrEmpty(row.CreatedBy) ? row.CreatedBy.Substring(0, 1).ToUpper() : "?")
                                            </span>
                                        </div>
                                        <div class="text-sm text-gray-700">@row.CreatedBy</div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                                    @* Formaterer datoen pent *@
                                    @row.CreatedAt?.ToString("yyyy-MM-dd HH:mm")
                                </td>
                                
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                                    <a asp-action="ValidateReport"
                                       asp-controller="Report"
                                       asp-route-reportId="@row.ReportId"
                                       class="inline-flex items-center px-3 py-2 rounded-lg bg-green-800 text-white text-xs font-medium hover:bg-green-900 transition-colors">
                                        Validate
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-6 text-center text-sm text-gray-600">
            Showing <span class="font-medium text-gray-900">@Model.Count()</span> pending reports
        </div>
    }

</section>

@section Scripts {
    <script>
        /**
         * CLIENT-SIDE TABLE SORTING
         * -------------------------
         * Provides sorting functionality for the report table without reloading the page.
         * Handles Numbers, Dates, Coordinates, and Strings.
         * * Note: In a production environment, this logic should be moved to wwwroot/js/site.js
         * to adhere to Separation of Concerns. Kept here for submission completeness.
         */
        (function () {
            const container = document.querySelector('.overflow-x-auto');
            const table = container?.querySelector('table');
            if (!table) return;

            const thead = table.tHead;
            const tbody = table.tBodies[0];
            if (!thead || !tbody) return;

            const headerCells = Array.from(thead.rows[0].cells);
            const lastCol = headerCells.length - 1; // Assume last column is 'Actions' (non-sortable)

            // Initialize headers with sort indicators
            headerCells.forEach((th, i) => {
                if (i === lastCol) return; // Skip Action column
                
                th.dataset.sortable = 'true';
                th.style.cursor = 'pointer';
                
                if (!th.querySelector('.sort-indicator')) {
                    const span = document.createElement('span');
                    span.className = 'sort-indicator ml-1 text-gray-400';
                    span.innerText = '↕'; // Neutral sort icon
                    th.appendChild(span);
                }
            });

            const getCellValue = (row, idx) => {
                const cell = row.cells[idx];
                if (!cell) return '';
                // Check if there is a data attribute for sorting (e.g. raw timestamp), otherwise use text
                const ds = cell.getAttribute('data-sort-value');
                return (ds !== null ? ds : cell.innerText).trim();
            };

            const normalize = (val) => {
                if (!val) return { t: 's', v: '' };

                // 1. Coordinates "lat, lon"
                if (/^\s*-?\d+(\.\d+)?\s*,\s*-?\d+(\.\d+)?\s*$/.test(val)) {
                    const parts = val.split(',').map(s => parseFloat(s.trim()));
                    return { t: 'coord', v: parts };
                }

                // 2. ISO Dates
                const fIso = Date.parse(val);
                if (!isNaN(fIso)) return { t: 'd', v: fIso };

                // 3. Numerics (handles "12.3", "12 m", etc.)
                const numMatch = val.trim().match(/^[-+]?[0-9]*[.,]?[0-9]+(?:[eE][-+]?\d+)?/);
                if (numMatch) {
                    // Remove non-numeric chars except . -
                    const n = parseFloat(val.replace(',', '.').replace(/[^\d\.\-eE]/g, '')); 
                    if (!isNaN(n)) return { t: 'n', v: n };
                }

                // 4. Default String
                return { t: 's', v: val.toLowerCase() };
            };

            const updateIndicators = (activeTh, order) => {
                headerCells.forEach(th => {
                    const ind = th.querySelector('.sort-indicator');
                    if (ind) {
                        if (th === activeTh) {
                            ind.innerText = order === 'asc' ? '▲' : '▼';
                            ind.className = 'sort-indicator ml-1 text-green-800';
                        } else {
                            ind.innerText = '↕';
                            ind.className = 'sort-indicator ml-1 text-gray-400';
                        }
                    }
                });
            };

            // Event Listeners
            headerCells.forEach((th, colIndex) => {
                if (th.dataset.sortable !== 'true') return;

                th.addEventListener('click', () => {
                    const currentOrder = th.dataset.order || 'neutral';
                    const order = currentOrder === 'asc' ? 'desc' : 'asc';
                    
                    const rows = Array.from(tbody.rows).map((r, idx) => ({ r, idx }));

                    rows.sort((A, B) => {
                        const aVal = getCellValue(A.r, colIndex);
                        const bVal = getCellValue(B.r, colIndex);
                        
                        const na = normalize(aVal);
                        const nb = normalize(bVal);
                        
                        const dir = order === 'asc' ? 1 : -1;

                        // Type specific sorting logic
                        if (na.t === 'n' && nb.t === 'n') return (na.v - nb.v) * dir;
                        if (na.t === 'd' && nb.t === 'd') return (na.v - nb.v) * dir;
                        
                        // String compare
                        return na.v.localeCompare(nb.v, undefined, { numeric: true }) * dir;
                    });

                    // Re-append sorted rows
                    rows.forEach(o => tbody.appendChild(o.r));

                    // Update UI
                    th.dataset.order = order;
                    updateIndicators(th, order);
                });
            });
        })();
    </script>
}