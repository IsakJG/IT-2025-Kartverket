@model IEnumerable<Kartverket.Web.Models.ArchiveRow>

@{
    ViewData["Title"] = "Report Archive";
}

<h1 class="text-2xl font-semibold mb-4">@ViewData["Title"]</h1>

@if (!Model.Any())
{
    <p class="text-gray-600">No reports found.</p>
}
else
{
    <div class="overflow-x-auto bg-white rounded-lg border border-gray-200 shadow-sm">
        <table class="min-w-full table-auto divide-y divide-gray-200">
            <!-- Kolonne-headere -->
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-4 py-3 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">
                        Report ID
                    </th>
                    <th class="px-4 py-3 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">
                        Title
                    </th>
                    <th class="px-4 py-3 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">
                        Submitted by
                    </th>
                    <th class="px-4 py-3 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">
                        Status
                    </th>
                    <th class="px-4 py-3 text-right text-xs font-bold text-gray-600 uppercase tracking-wider">
                        Height (ft)
                    </th>
                    <th class="px-4 py-3 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">
                        Date
                    </th>
                    <th class="px-4 py-3 text-right text-xs font-bold text-gray-600 uppercase tracking-wider">
                        Open Report
                    </th>
                </tr>
            </thead>

            <!-- Rader -->
            <tbody class="bg-white divide-y divide-gray-100">
                @foreach (var report in Model)
                {
                    <tr class="odd:bg-white even:bg-gray-100 hover:bg-gray-200">
                        <td class="px-4 py-3 text-sm text-gray-700">
                            @report.ReportID
                        </td>
                        <td class="px-4 py-3 text-sm text-gray-700">
                            @report.Title
                        </td>
                        <td class="px-4 py-3 text-sm text-gray-700">
                            @report.Pilot
                        </td>
                        <td class="px-4 py-3 text-sm text-gray-700">
                            @report.Status
                        </td>
                        <td class="px-4 py-3 text-sm text-gray-700 text-right">
                            @report.HeightInFeet
                        </td>
                        <td class="px-4 py-3 text-sm text-gray-700">
                            @report.CreatedAt?.ToString("yyyy-MM-dd HH:mm")
                        </td>
                        
                        <td class="px-4 py-3 text-sm text-right">
                            <a asp-action="Details"
                               asp-controller="Report"
                               asp-route-id="@report.ReportID"
                               class="inline-flex items-center rounded-md bg-gray-800 text-white px-3 py-1 text-xs font-medium hover:bg-gray-700">
                                Open
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
