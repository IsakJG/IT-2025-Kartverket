@model Kartverket.Web.Models.Entities.Report

@* ---------------------------------------------------------------------------
    View: Validate Report
    Role: Registar
    Description: 
        Detaljvisning for Registrar med handlingsknapper for Ã¥ Godkjenne (Approve) 
        eller Avvise (Reject) en rapport.
    --------------------------------------------------------------------------- 
*@

@{
    ViewData["Title"] = "Validate Report";
    var reportId = Model.ReportId;
    
    // DEV NOTE: GeoJSON parsing logic kept in view for simplicity in this iteration.
    // Ideally, coordinates should be parsed in the Controller and passed via ViewModel.
    double? lat = null;
    double? lng = null;
    
    if (!string.IsNullOrWhiteSpace(Model.GeoLocation))
    {
        try
        {
            using var doc = System.Text.Json.JsonDocument.Parse(Model.GeoLocation);
            var root = doc.RootElement;

            if (root.ValueKind == System.Text.Json.JsonValueKind.Object)
            {
                if (root.TryGetProperty("lat", out var latProp) && latProp.ValueKind == System.Text.Json.JsonValueKind.Number)
                    lat = latProp.GetDouble();

                if (root.TryGetProperty("lng", out var lngProp) && lngProp.ValueKind == System.Text.Json.JsonValueKind.Number)
                    lng = lngProp.GetDouble();
            }
        }
        catch { /* Ignore parsing errors, map will fallback to default */ }
    }
}

<section class="mx-auto max-w-4xl pt-10 px-4">
    
    <div class="flex items-center justify-center gap-4 mb-8">
        @* Url.Content sikrer robust bildesti *@
        <img src="@Url.Content("~/images/KartverketLogo.svg")"
             alt="Kartverket"
             class="h-16 w-auto" />
        <h1 class="text-4xl font-medium text-gray-900">
            Validate Report
        </h1>
    </div>

    <div class="text-center mb-8">
        <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
            Report #@reportId
        </span>
    </div>

    <div class="bg-white shadow-md rounded-2xl border border-gray-200 p-8 mb-6">
        <h2 class="text-2xl font-semibold mb-6 text-gray-900 flex items-center">
            <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            Report Details
        </h2>
        
        <div class="space-y-4">
            <div class="flex items-start py-3 border-b border-gray-200">
                <dt class="text-sm font-bold text-gray-600 uppercase tracking-wider w-40 flex-shrink-0">Report ID</dt>
                <dd class="text-base text-gray-900 font-semibold">#@Model.ReportId</dd>
            </div>

            <div class="flex items-start py-3 border-b border-gray-200">
                <dt class="text-sm font-bold text-gray-600 uppercase tracking-wider w-40 flex-shrink-0">Obstacle Type</dt>
                <dd class="text-base text-gray-900">@(Model.Category?.CategoryName ?? "N/A")</dd>
            </div>

            <div class="flex items-start py-3 border-b border-gray-200">
                <dt class="text-sm font-bold text-gray-600 uppercase tracking-wider w-40 flex-shrink-0">Height</dt>
                <dd class="text-base text-gray-900">@Model.HeightInFeet feet</dd>
            </div>

            <div class="flex items-start py-3 border-b border-gray-200">
                <dt class="text-sm font-bold text-gray-600 uppercase tracking-wider w-40 flex-shrink-0">Status</dt>
                <dd>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                        @(Model.Status?.StatusName ?? "Unknown")
                    </span>
                </dd>
            </div>

            <div class="flex items-start py-3 border-b border-gray-200">
                <dt class="text-sm font-bold text-gray-600 uppercase tracking-wider w-40 flex-shrink-0">Reported By</dt>
                <dd class="flex items-center">
                    <div class="h-8 w-8 rounded-full bg-gray-200 flex items-center justify-center mr-3">
                        <span class="text-xs font-medium text-gray-600">
                            @(!string.IsNullOrEmpty(Model.User?.Username) ? Model.User.Username.Substring(0, 1).ToUpper() : "?")
                        </span>
                    </div>
                    <span class="text-base text-gray-900">@(Model.User?.Username ?? "Unknown")</span>
                </dd>
            </div>

            <div class="flex items-start py-3">
                <dt class="text-sm font-bold text-gray-600 uppercase tracking-wider w-40 flex-shrink-0">Description</dt>
                <dd class="text-base text-gray-700 leading-relaxed">@(Model.Description ?? "No description provided.")</dd>
            </div>
        </div>
    </div>

    <div class="bg-white shadow-md rounded-2xl border border-gray-200 p-8 mb-6">
        <h3 class="text-xl font-semibold mb-6 text-gray-900 flex items-center">
            <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            Location
        </h3>
        <div id="map" class="w-full h-80 rounded-xl shadow-sm border border-gray-200"></div>
    </div>

    <div class="bg-white shadow-md rounded-2xl border border-gray-200 p-8 mb-6">
        <h3 class="text-xl font-semibold mb-6 text-gray-900 flex items-center">
            <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Review Action
        </h3>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <form asp-action="ApproveReport" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="reportId" value="@reportId" />
                <button type="submit" 
                        class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-4 px-6 rounded-xl transition-all shadow-md hover:shadow-lg flex items-center justify-center group">
                    <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 group-hover:scale-110 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    Approve Report
                </button>
            </form>

            <form asp-action="RejectReport" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="reportId" value="@reportId" />
                <button type="submit" 
                        class="w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-4 px-6 rounded-xl transition-all shadow-md hover:shadow-lg flex items-center justify-center group">
                    <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 group-hover:scale-110 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                    Reject Report
                </button>
            </form>

            <a asp-action="ActiveReports" 
               class="w-full bg-gray-400 hover:bg-gray-500 text-white font-semibold py-4 px-6 rounded-xl transition-all shadow-md hover:shadow-lg flex items-center justify-center">
                <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Back to Active Reports
            </a>
        </div>
    </div>

</section>

@section Scripts {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        // Init Map Variables from C#
        // CultureInfo.InvariantCulture is crucial to force dot decimal separator (e.g., 59.123 instead of 59,123)
        const lat = @(lat?.ToString(System.Globalization.CultureInfo.InvariantCulture) ?? "59.9139");
        const lon = @(lng?.ToString(System.Globalization.CultureInfo.InvariantCulture) ?? "10.7522");
        
        const map = L.map('map').setView([lat, lon], 13);
        
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', { 
            attribution: '&copy; OpenStreetMap contributors' 
        }).addTo(map);
        
        @if (!string.IsNullOrWhiteSpace(Model.GeoLocation))
        {
            @:// C# Block: Injecting GeoJSON logic
            <text>
            try {
                var geoJsonData = @Html.Raw(Model.GeoLocation);
                
                // If it's proper GeoJSON (Feature/FeatureCollection)
                if (geoJsonData.type === 'FeatureCollection' || geoJsonData.type === 'Feature') {
                    var geoJsonLayer = L.geoJSON(geoJsonData).addTo(map);
                    map.fitBounds(geoJsonLayer.getBounds(), { padding: [50, 50] });
                } 
                // Fallback for simple lat/lng objects
                else if (geoJsonData.lat && geoJsonData.lng) {
                    L.marker([geoJsonData.lat, geoJsonData.lng]).addTo(map).bindPopup('@Model.Title').openPopup();
                }
            } catch (e) {
                console.error('Error rendering geometry:', e);
                // Fallback to simple marker if GeoJSON fails but we have lat/lon
                if (lat !== 0 && lon !== 0) { 
                    L.marker([lat, lon]).addTo(map).bindPopup('@Model.Title').openPopup(); 
                }
            }
            </text>
        }
        else
        {
            @:// No GeoJSON - use simple marker from lat/lon
            <text>
            if (lat !== 0 && lon !== 0) {
                L.marker([lat, lon]).addTo(map).openPopup();
            }
            </text>
        }
    </script>
}