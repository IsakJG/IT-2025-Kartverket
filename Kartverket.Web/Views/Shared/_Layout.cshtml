<!DOCTYPE html>
<html lang="en" class="@(Context.Session.GetString("DarkMode") == "true" ? "dark" : "")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kartverket.Web</title>

    @{
        var antiforgery = Context.RequestServices.GetService<Microsoft.AspNetCore.Antiforgery.IAntiforgery>();
        var tokens = antiforgery?.GetAndStoreTokens(Context);
    }
    <meta name="csrf-token" content="@tokens?.RequestToken" />

    <script src="https://cdn.tailwindcss.com"></script> 
    <script>
        tailwind.config = {
          darkMode: 'class', 
          theme: {
            extend: {
              container: { center: true, padding: { DEFAULT: '1rem', md: '1.5rem' } },
              colors: {
                  brand: {
                      DEFAULT: '#007047', // Kartverket Green
                      dark: '#005a39',
                      light: '#338d6c'
                  }
              }
            }
          }
        }
    </script>

    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Darkmode.css" asp-append-version="true" />
</head>
<body class="min-h-screen flex flex-col bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-200">
    
    @{
        // Hent innlogget brukerinfo sikkert fra Session
        var isLoggedIn = Context.Session.GetInt32("UserId").HasValue;
        var roleString = Context.Session.GetString("UserRoles");
        // Splitter roller og h√•ndterer null-verdier
        var userRoles = !string.IsNullOrEmpty(roleString) 
            ? roleString.Split(',') 
            : Array.Empty<string>();
        var username = Context.Session.GetString("Username") ?? "User";
    }

    <header class="sticky top-0 z-50 border-b bg-white/90 backdrop-blur dark:bg-gray-800/90 dark:border-gray-700 shadow-sm">
        <nav class="container flex items-center justify-between py-3">
            
            <div class="flex items-center gap-4">
                <a class="text-xl font-bold tracking-tight text-brand dark:text-green-400 hover:opacity-80 transition-opacity flex items-center gap-2"
                   asp-controller="@(isLoggedIn ? (userRoles.Contains("Admin") ? "AdminPart" : (userRoles.Contains("Registar") || userRoles.Contains("Registrar") ? "Registrar" : (userRoles.Contains("Pilot") ? "Home" : "Home"))) : "Home")" 
                   asp-action="@(isLoggedIn ? (userRoles.Contains("Admin") ? "Index" : (userRoles.Contains("Registar") || userRoles.Contains("Registrar") ? "RegisterMetode" : (userRoles.Contains("Pilot") ? "MainPage" : "MainPage"))) : "Index")">
                    
                    <img src="@Url.Content("~/images/Kartverketlogo.svg")" alt="Logo" class="h-8 w-auto" />
                    <span class="hidden sm:inline">Kartverket.Web</span>
                </a>
            </div>

            <div class="flex items-center gap-3 md:hidden">
                <button id="navToggle"
                        class="p-2 rounded-md hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
                        aria-label="Toggle navigation">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>

            <div id="primaryNav" class="hidden w-full md:w-auto md:flex md:items-center md:gap-6 fixed md:static top-16 left-0 bg-white dark:bg-gray-800 md:bg-transparent shadow-lg md:shadow-none p-4 md:p-0 border-b md:border-none border-gray-200 dark:border-gray-700">
                <ul class="flex flex-col md:flex-row gap-2 md:gap-6 items-center">
                    
                    @if (isLoggedIn)
                    {
                        <li class="w-full md:w-auto text-center md:text-left">
                            <span class="text-sm font-medium text-gray-500 dark:text-gray-400">
                                @username
                            </span>
                        </li>

                        <li class="w-full md:w-auto">
                            <a class="block px-3 py-2 rounded-md hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors text-center"
                               asp-controller="@(userRoles.Contains("Admin") ? "AdminPart" : (userRoles.Contains("Registar") || userRoles.Contains("Registrar") ? "Registrar" : "Home"))" 
                               asp-action="@(userRoles.Contains("Admin") ? "Index" : (userRoles.Contains("Registar") || userRoles.Contains("Registrar") ? "RegisterMetode" : "MainPage"))">
                                Dashboard
                            </a>
                        </li>

                        <li class="w-full md:w-auto">
                            <form asp-controller="Auth" asp-action="Logout" method="post" class="w-full">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="w-full md:w-auto px-4 py-2 rounded-md bg-red-50 text-red-700 hover:bg-red-100 dark:bg-red-900/30 dark:text-red-300 dark:hover:bg-red-900/50 transition-colors font-medium">
                                    Log out
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="w-full md:w-auto">
                            <a asp-controller="Auth" asp-action="Login" class="block px-4 py-2 rounded-md bg-brand text-white hover:bg-brand-dark transition-colors text-center font-medium shadow-sm">
                                Sign In
                            </a>
                        </li>
                    }

                    <li class="w-full md:w-auto flex justify-center md:justify-start">
                        <button id="themeToggle"
                                class="p-2 rounded-full hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors text-yellow-500 dark:text-yellow-300"
                                aria-label="Toggle dark mode"
                                title="Toggle Dark Mode">
                            <svg class="h-5 w-5 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
                            </svg>
                            <svg class="h-5 w-5 block dark:hidden text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
                            </svg>
                        </button>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container mt-6">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-4 rounded shadow-sm">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-green-700">@TempData["SuccessMessage"]</p>
                    </div>
                </div>
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-4 rounded shadow-sm">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-red-700">@TempData["ErrorMessage"]</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <main role="main" class="flex-grow">
        @RenderBody()
    </main>

    <footer class="bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 mt-auto">
        <div class="container py-6 flex flex-col md:flex-row justify-between items-center text-sm text-gray-500 dark:text-gray-400">
            <p>&copy; @DateTime.Now.Year - Kartverket.Web - All rights reserved.</p>
            <div class="flex gap-4 mt-2 md:mt-0">
                <a asp-controller="Home" asp-action="Privacy" class="hover:text-brand dark:hover:text-green-400 transition-colors">Privacy Policy</a>
                <span class="text-gray-300 dark:text-gray-600">|</span>
                <a href="#" class="hover:text-brand dark:hover:text-green-400 transition-colors">Terms of Service</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // --- 1. Dark Mode Logic ---
        const themeToggle = document.getElementById('themeToggle');
        
        if (themeToggle) {
            themeToggle.addEventListener('click', () => {
                const html = document.documentElement;
                const isDark = html.classList.contains('dark');
                
                // Toggle UI immediately
                if (isDark) {
                    html.classList.remove('dark');
                } else {
                    html.classList.add('dark');
                }
                
                // Persist to Server via AJAX
                fetch('/Home/SetDarkMode', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        // Include CSRF Token found in meta tag
                        'RequestVerificationToken': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
                    },
                    body: JSON.stringify({ isDarkMode: !isDark })
                }).catch(err => console.error('Failed to save theme preference', err));
            });
        }

        // --- 2. Mobile Menu Logic ---
        const navToggle = document.getElementById('navToggle');
        const primaryNav = document.getElementById('primaryNav');
        
        if (navToggle && primaryNav) {
            navToggle.addEventListener('click', () => {
                primaryNav.classList.toggle('hidden');
            });
        }
        
        // --- 3. AJAX CSRF Setup (Global) ---
        // Ensures all fetch requests automatically include the anti-forgery token
        const csrfMeta = document.querySelector('meta[name="csrf-token"]');
        if (csrfMeta) {
            const token = csrfMeta.getAttribute('content');
            const originalFetch = window.fetch;
            
            window.fetch = function(...args) {
                const [url, options = {}] = args;
                
                // Only add headers to non-GET requests (POST, PUT, DELETE)
                if (options.method && options.method.toUpperCase() !== 'GET') {
                    options.headers = {
                        ...options.headers,
                        'RequestVerificationToken': token,
                        'X-Requested-With': 'XMLHttpRequest'
                    };
                }
                return originalFetch(url, options);
            };
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>