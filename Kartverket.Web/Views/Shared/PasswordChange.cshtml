@model Kartverket.Web.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change User Password";
}

<style>
    body {
        background: #f5f3f0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    }
    .admin-page {
        max-width: 500px;
        margin: 40px auto;
        padding: 0 16px;
    }
    .form-card {
        background: #ffffff;
        padding: 24px;
        border-radius: 16px;
        border: 1px solid #e2e2e2;
        box-shadow: 0 1px 4px rgba(0,0,0,0.06);
    }
    .form-label {
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 4px;
        display: block;
    }
    .form-input {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid #ccc;
        border-radius: 10px;
        margin-bottom: 10px;
    }
    .btn-submit {
        background: #007047;
        color: #fff;
        padding: 12px 28px;
        border-radius: 10px;
        font-weight: 500;
        border: none;
        cursor: pointer;
    }
    .btn-submit:hover {
        filter: brightness(1.05);
    }
    .btn-cancel {
        padding: 12px 28px;
        border-radius: 10px;
        border: 1px solid #ccc;
        text-decoration: none;
        margin-left: 8px;
        color: #333;
    }
    .btn-cancel:hover {
        background: #f5f5f5;
    }
</style>

<div class="admin-page">
    <div class="form-card">
        <h2 class="text-2xl font-semibold mb-6 text-gray-900">Change Password</h2>
        <form asp-action="PasswordChange" asp-controller="Home" method="post">
            <input type="hidden" asp-for="Id" />

            <!-- New Password -->
            <label asp-for="Password" class="form-label">New Password</label>
            <input asp-for="Password" type="password" class="form-input" placeholder="Enter new password" />
            <span asp-validation-for="Password" class="text-red-600 text-sm"></span>

            <!-- Confirm Password -->
            <label for="ConfirmPassword" class="form-label">Confirm New Password</label>
            <input id="ConfirmPassword" name="ConfirmPassword" type="password" class="form-input" placeholder="Confirm new password" />
            <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>

            <div class="mt-4">
                <button type="submit" class="btn-submit">Change Password</button>
                <a asp-action="MainPage" class="btn-cancel">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

