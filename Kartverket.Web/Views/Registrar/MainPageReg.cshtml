@* ---------------------------------------------------------------------------
    View: Registrar Dashboard (MainPage)
    Role: Registar
    Description: 
        Landingsside for matrikkelfører (Registrar).
        Gir tilgang til arbeidsflyt for rapporter (Active/Archive) og kontoinnstillinger.
    --------------------------------------------------------------------------- 
*@

@{
    ViewData["Title"] = "Registrar Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    // Henter brukernavn fra session. Fallback til rollenavnet hvis session har utløpt/er tom.
    var username = Context.Session.GetString("Username") ?? "Registar";
}

<section class="mx-auto max-w-4xl pt-10 px-4">
    
    <div class="flex justify-center mb-6">
        @* Url.Content sikrer at bildestien fungerer uavhengig av om appen kjører i rot eller undermappe *@
        <img src="@Url.Content("~/images/Kartverketlogo.svg")"
             alt="Kartverket"
             class="h-20 w-auto" />
    </div>

    <h1 class="text-4xl font-medium text-center text-gray-900 mb-2">
        Welcome @username
    </h1>
    <p class="text-center text-gray-600 mb-12">
        Registar Main Page
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-3xl mx-auto">
        
        <a asp-controller="Report" asp-action="ActiveReports"
           class="bg-white shadow-md rounded-2xl p-8 border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all group">
            <div class="flex flex-col items-center text-center space-y-4">
                <div class="h-16 w-16 bg-green-100 rounded-full flex items-center justify-center group-hover:bg-green-200 transition">
                    <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-800" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                </div>
                <div>
                    <h2 class="text-xl font-semibold text-gray-900 mb-1">Active Reports</h2>
                    <p class="text-sm text-gray-600">Review and validate pending obstacle reports</p>
                </div>
            </div>
        </a>

        <a asp-controller="Report" asp-action="Archive"
           class="bg-white shadow-md rounded-2xl p-8 border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all group">
            <div class="flex flex-col items-center text-center space-y-4">
                <div class="h-16 w-16 bg-gray-100 rounded-full flex items-center justify-center group-hover:bg-gray-200 transition">
                    <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
                    </svg>
                </div>
                <div>
                    <h2 class="text-xl font-semibold text-gray-900 mb-1">Report Archive</h2>
                    <p class="text-sm text-gray-600">Browse all submitted obstacle reports</p>
                </div>
            </div>
        </a>
        
        <a asp-controller="Registrar" asp-action="PasswordChange"
           class="bg-white shadow-md rounded-2xl p-8 border border-gray-200 hover:shadow-lg hover:-translate-y-1 transition-all group md:col-span-2 md:max-w-sm md:mx-auto md:w-full">
            <div class="flex flex-col items-center text-center space-y-4">
                <div class="h-16 w-16 bg-blue-100 rounded-full flex items-center justify-center group-hover:bg-blue-200 transition">
                    <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c1.104 0 2-.896 2-2s-.896-2-2-2-2 .896-2 2 .896 2 2 2zm0 0v2m0 4h.01M17 21H7a2 2 0 01-2-2V7a2 2 0 012-2h10a2 2 0 012 2v12a2 2 0 01-2 2z" />
                    </svg>
                </div>
                <div>
                    <h2 class="text-xl font-semibold text-gray-900 mb-1">Change Password</h2>
                    <p class="text-sm text-gray-600">Update your account password</p>
                </div>
            </div>
        </a>

    </div>
</section>