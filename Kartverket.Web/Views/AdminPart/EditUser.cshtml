@model Kartverket.Web.Models.UserAdminViewModel
@{
    ViewData["Title"] = "Edit User";
}

<style>
    body {
        background: #f5f3f0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    }

    .admin-page {
        max-width: 900px;
        margin: 20px auto;
        padding: 0 16px;
    }

    .kv-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 32px;
    }

    .kv-brand {
        display: flex;
        gap: 10px;
        align-items: center;
    }

        .kv-brand img {
            height: 60px;
            width: auto;
        }

    .kv-title {
        font-size: 48px;
        font-weight: 500;
    }

    .kv-home-btn {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        border: 1px solid #ddd;
        background: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        color: #333;
    }

        .kv-home-btn:hover {
            background: #f2f2f2;
        }

    .form-card {
        background: #ffffff;
        padding: 24px;
        border-radius: 16px;
        border: 1px solid #e2e2e2;
        box-shadow: 0 1px 4px rgba(0,0,0,0.06);
    }

    .form-label {
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 4px;
        display: block;
    }

    .form-input {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid #ccc;
        border-radius: 10px;
        margin-bottom: 10px;
    }

    .btn-submit {
        background: #007047;
        color: #fff;
        padding: 12px 28px;
        border-radius: 10px;
        font-weight: 500;
        border: none;
        cursor: pointer;
    }

        .btn-submit:hover {
            filter: brightness(1.05);
        }

    .btn-cancel {
        padding: 12px 28px;
        border-radius: 10px;
        border: 1px solid #ccc;
        text-decoration: none;
        margin-left: 8px;
        color: #333;
    }

        .btn-cancel:hover {
            background: #f5f5f5;
        }
</style>

<div class="admin-page">

    <!-- Header -->
    <div class="kv-header">
        <div class="kv-brand">
            <img src="~/images/KartverketLogo.svg" alt="Kartverket" />
            <span class="kv-title">Kartverket</span>
        </div>

        <a asp-controller="AdminPart" asp-action="Index" class="kv-home-btn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" />
                <polyline points="9 22 9 12 15 12 15 22" />
            </svg>
        </a>
    </div>

    <h1 class="admin-heading">Edit User</h1>
    <p class="admin-subtitle">Update user information and access role</p>

    <div class="form-card">

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <!-- Full Name -->
            <label asp-for="Name" class="form-label">Full Name</label>
            <input asp-for="Name" class="form-input" />
            <span asp-validation-for="Name" class="text-red-600 text-sm"></span>

            <!-- Username -->
            <label asp-for="UserName" class="form-label">Username</label>
            <input asp-for="UserName" class="form-input" />
            <span asp-validation-for="UserName" class="text-red-600 text-sm"></span>

            <!-- Email -->
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-input" />
            <span asp-validation-for="Email" class="text-red-600 text-sm"></span>

            <!-- Password -->
            <label class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-input"
                   placeholder="Leave blank to keep current password" />

            <!-- Role -->
            <label asp-for="RoleId" class="form-label">Role</label>
            <select asp-for="RoleId" asp-items="ViewBag.Roles" class="form-input">
                <option value="">Select a role</option>
            </select>
            <span asp-validation-for="RoleId" class="text-red-600 text-sm"></span>

            <div class="mt-4">
                <button type="submit" class="btn-submit">Save Changes</button>
                <a asp-action="Index" class="btn-cancel">Cancel</a>
            </div>

        </form>
    </div>
</div>
