@model Kartverket.Web.Models.UserAdminViewModel

@* ---------------------------------------------------------------------------
    View: Edit User
    Role: Admin
    Description: 
        Skjema for redigering av eksisterende brukere.
        Passordfeltet er valgfritt (la stå tomt for å beholde eksisterende).
        Dropdown-lister populeres via ViewBag fra AdminPartController.
    ---------------------------------------------------------------------------
*@

@{
    ViewData["Title"] = "Edit User";
}

<style>
    /* NOTE: Internal styles kept for self-containment/visual consistency as requested. */
    body {
        background: #f5f3f0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    }

    .admin-page {
        max-width: 900px;
        margin: 20px auto;
        padding: 0 16px;
    }

    .kv-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 32px;
    }

    .kv-brand {
        display: flex;
        gap: 10px;
        align-items: center;
    }

        .kv-brand img {
            height: 60px;
            width: auto;
        }

    .kv-title {
        font-size: 48px;
        font-weight: 500;
    }

    .form-card {
        background: #ffffff;
        padding: 24px;
        border-radius: 16px;
        border: 1px solid #e2e2e2;
        box-shadow: 0 1px 4px rgba(0,0,0,0.06);
    }

    .form-label {
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 4px;
        display: block;
    }

    .form-input {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid #ccc;
        border-radius: 10px;
        margin-bottom: 10px;
    }

    .btn-submit {
        background: #007047;
        color: #fff;
        padding: 12px 28px;
        border-radius: 10px;
        font-weight: 500;
        border: none;
        cursor: pointer;
    }

        .btn-submit:hover {
            filter: brightness(1.05);
        }

    .btn-cancel {
        padding: 12px 28px;
        border-radius: 10px;
        border: 1px solid #ccc;
        text-decoration: none;
        margin-left: 8px;
        color: #333;
    }

        .btn-cancel:hover {
            background: #f5f5f5;
        }

    /* Style for validation summary errors */
    .validation-summary-errors {
        color: #dc2626;
        margin-bottom: 15px;
        font-weight: 500;
    }
</style>

<div class="admin-page">

    <div class="kv-header">
        <div class="kv-brand">
            <img src="~/images/KartverketLogo.svg" alt="Kartverket" />
            <span class="kv-title">Kartverket</span>
        </div>
    </div>

    <h1 class="admin-heading">Edit User</h1>
    <p class="admin-subtitle">Update user information, access role and organization</p>

    <div class="form-card">

        <form asp-action="Edit" method="post">
            
            @* Validation Summary: Sikkerhetsnett for feil som ikke treffer et spesifikt felt *@
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <input type="hidden" asp-for="Id" />

            @* Labels henter nå tekst automatisk fra ViewModel [Display(Name="...")] *@
            
            <label asp-for="UserName" class="form-label"></label>
            <input asp-for="UserName" class="form-input" />
            <span asp-validation-for="UserName" class="text-red-600 text-sm"></span>

            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-input" />
            <span asp-validation-for="Email" class="text-red-600 text-sm"></span>

            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-input" placeholder="Leave blank to keep current password" />
            <span asp-validation-for="Password" class="text-red-600 text-sm"></span>

            <label asp-for="RoleId" class="form-label"></label>
            <select asp-for="RoleId" asp-items="ViewBag.Roles" class="form-input">
                <option value="">Select a role</option>
            </select>
            <span asp-validation-for="RoleId" class="text-red-600 text-sm"></span>
            
            <label asp-for="OrgId" class="form-label"></label>
            <select asp-for="OrgId" asp-items="ViewBag.Organizations" class="form-input">
                <option value="">Select an organization</option>
            </select>
            <span asp-validation-for="OrgId" class="text-red-600 text-sm"></span>

            <div class="mt-4">
                <button type="submit" class="btn-submit">Save Changes</button>
                <a asp-action="Index" class="btn-cancel">Cancel</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}