@model Kartverket.Web.Models.UserAdminViewModel

@* ---------------------------------------------------------------------------
    View: Create User
    Role: Admin
    Description: 
        Presenterer et skjema for opprettelse av nye brukere. 
        Henter data for roller og organisasjoner via ViewBag for dynamiske nedtrekkslister.
        Bruker Tag Helpers for binding mot UserAdminViewModel.
    ---------------------------------------------------------------------------
*@

@{
    ViewData["Title"] = "Create User";
}

<style>
    /* NOTE: Styles are kept internal for this view to maintain self-containment 
       in this specific context, ensuring consistent design without external dependencies.
    */
    body {
        background: #f5f3f0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    }

    .admin-page {
        max-width: 900px;
        margin: 20px auto;
        padding: 0 16px;
    }

    .kv-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 32px;
    }

    .kv-brand {
        display: flex;
        gap: 10px;
        align-items: center;
    }

        .kv-brand img {
            height: 60px;
            width: auto;
        }

    .kv-title {
        font-size: 48px;
        font-weight: 500;
    }

    /* Form Card */
    .form-card {
        background: #ffffff;
        padding: 24px;
        border-radius: 16px;
        border: 1px solid #e2e2e2;
        box-shadow: 0 1px 4px rgba(0,0,0,0.06);
    }

    .form-label {
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 4px;
        display: block;
    }

    .form-input {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid #ccc;
        border-radius: 10px;
        margin-bottom: 10px;
    }

    .btn-submit {
        background: #007047;
        color: #fff;
        padding: 12px 28px;
        border-radius: 10px;
        font-weight: 500;
        border: none;
        cursor: pointer;
    }

        .btn-submit:hover {
            filter: brightness(1.05);
        }

    .btn-cancel {
        padding: 12px 28px;
        border-radius: 10px;
        border: 1px solid #ccc;
        text-decoration: none;
        margin-left: 8px;
        color: #333;
    }

        .btn-cancel:hover {
            background: #f5f5f5;
        }
        
    /* Utility class for validation summary text */
    .validation-summary-errors {
        color: #dc2626;
        margin-bottom: 15px;
        font-weight: 500;
    }
</style>

<div class="admin-page">

    <div class="kv-header">
        <div class="kv-brand">
            <img src="~/images/KartverketLogo.svg" alt="Kartverket" />
            <span class="kv-title">Kartverket</span>
        </div>
    </div>

    <h1 class="admin-heading">Create User</h1>
    <p class="admin-subtitle">Add a new user with role and login credentials</p>

    <div class="form-card">

        <form asp-action="Create" method="post">
            
            @* Validation Summary: Fanger opp feil som ikke tilhører et spesifikt felt 
               (f.eks. database-tilkoblingsfeil eller validering på tvers av felter).
            *@
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            @* Ved å la label-taggen være tom, henter Razor automatisk verdien fra 
               [Display(Name="...")] i ViewModel. Dette sikrer konsistens (DRY).
            *@

            <label asp-for="UserName" class="form-label"></label>
            <input asp-for="UserName" class="form-input" placeholder="Username" />
            <span asp-validation-for="UserName" class="text-red-600 text-sm"></span>

            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-input" placeholder="email@example.com" />
            <span asp-validation-for="Email" class="text-red-600 text-sm"></span>

            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-input" placeholder="Enter password" />
            <span asp-validation-for="Password" class="text-red-600 text-sm"></span>

            <label asp-for="RoleId" class="form-label"></label>
            <select asp-for="RoleId" asp-items="ViewBag.Roles" class="form-input">
                <option value="">Select a role</option>
            </select>
            <span asp-validation-for="RoleId" class="text-red-600 text-sm"></span>
            
            <label asp-for="OrgId" class="form-label"></label>
            <select asp-for="OrgId" asp-items="ViewBag.Organizations" class="form-input">
                <option value="">Select an organization</option>
            </select>
            <span asp-validation-for="OrgId" class="text-red-600 text-sm"></span>

            <div class="mt-4">
                <button type="submit" class="btn-submit">Create</button>
                <a asp-action="Index" class="btn-cancel">Cancel</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}