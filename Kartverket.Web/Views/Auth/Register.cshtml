@model Kartverket.Web.Models.RegisterViewModel

@* ---------------------------------------------------------------------------
    View: Register
    Description: 
        Offentlig registreringsskjema for nye brukere.
        Kobler automatisk nye brukere til standardorganisasjon (OrgId = 1) 
        via et skjult felt.
    ---------------------------------------------------------------------------
*@

@{
    ViewData["Title"] = "Registrer Bruker";
}

<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md mt-8">
    <h2 class="text-2xl font-bold mb-6 text-center">Registrer Ny Bruker</h2>
    
    <form asp-action="Register" method="post">
        
        @* Validation Summary: Fanger opp globale feil (f.eks. Database nede) *@
        <div asp-validation-summary="ModelOnly" class="mb-4 text-red-600 text-sm text-center"></div>

        <div class="mb-4">
            @* Label-tekst hentes fra ViewModel [Display] for å unngå hardkoding *@
            <label asp-for="Username" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Username" class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:border-blue-500 focus:ring-blue-500">
            <span asp-validation-for="Username" class="text-red-600 text-sm"></span>
        </div>
        
        <div class="mb-4">
            <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Email" class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:border-blue-500 focus:ring-blue-500">
            <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
        </div>
        
        <div class="mb-4">
            <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Password" class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:border-blue-500 focus:ring-blue-500">
            <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
        </div>
        
        <div class="mb-6">
            <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="ConfirmPassword" class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:border-blue-500 focus:ring-blue-500">
            <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
        </div>
        
        @* DEV NOTE: Hardcoding OrgId to 1 (Default Organization). 
           In a production multi-tenant system, this should be selected via dropdown or invite token. *@
        <input type="hidden" asp-for="OrgId" value="1" />
        
        <button type="submit" class="w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 transition-colors">
            Registrer Bruker
        </button>
        
        <div class="mt-4 text-center">
            <a asp-controller="Auth" asp-action="Login" class="text-blue-600 hover:text-blue-800">
                Allerede bruker? Logg inn her
            </a>
        </div>
    </form>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="max-w-md mx-auto mt-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded">
        @TempData["SuccessMessage"]
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}