@model Kartverket.Web.Models.LogIn
@{
    ViewData["Title"] = "Login";
}
<section class="mx-auto max-w-4xl">
    <div class="bg-gray-300 rounded-3xl p-8 shadow-lg">
        <header class="mb-6">
            <h1 class="text-2xl font-semibold text-center">Log inn form</h1>
        </header>
        <form asp-action="LogIn" method="post" class="space-y-5">
            <div class="grid gap-5 sm:grid-cols-2">
                <!-- Log in Bruker -->
                <div class="sm:col-span-2">
                    <label asp-for="Username" class="block text-sm font-medium text-gray-800 mb-1">Username</label>
                    <input asp-for="Username"
                           class="block w-full rounded-lg border-gray-300 focus:border-indigo-600 focus:ring-indigo-600 px-3 py-2"
                           placeholder="e.g., Roar Roarsen" />
                    <span asp-validation-for="Username" class="text-sm text-red-600"></span>

                <span asp-validation-for="Password" class="text-sm text-red-600"></span>
            </div>

            <!-- Error message -->
            @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
            {
                <p class="text-red-600 text-sm">@ViewBag.ErrorMessage</p>
            }

            <!-- Submit button -->
            <div class="pt-2 flex justify-end">
                <button type="submit"
                        class="h-12 w-12 bg-green-800 rounded-full flex items-center justify-center hover:bg-green-900 transition">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14M12 5l7 7-7 7" />
                    </svg>
                </button>
            </div>

        </form>

    </div>
</section>