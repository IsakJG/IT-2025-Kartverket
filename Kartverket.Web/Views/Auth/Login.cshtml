@model Kartverket.Web.Models.LogIn

@* ---------------------------------------------------------------------------
    View: Login
    Description: 
        Autentiseringsside for applikasjonen.
        Inneholder skjema for brukernavn/passord og en hjelpeboks med 
        testbrukere for enklere testing/sensurering.
    ---------------------------------------------------------------------------
*@

@{
    ViewData["Title"] = "Login";
}

<section class="mx-auto max-w-sm pt-10">

    <div class="flex justify-center mb-6">
        @* Url.Content sikrer at bildestien fungerer uavhengig av deployment-mappe *@
        <img src="@Url.Content("~/images/Kartverketlogo.svg")"
             alt="Kartverket"
             class="h-20 w-auto" />
    </div>

    <h1 class="text-4xl font-medium text-center text-gray-900 mb-8">
        Sign In
    </h1>

    <div class="bg-white shadow-md rounded-2xl p-8 border border-gray-200">

        <form asp-action="Login" method="post" class="space-y-5">
            
            @* Validation Summary: Viser generelle feilmeldinger fra AuthController (f.eks. "Feil brukernavn/passord") *@
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>

            <div>
                @* Label-tekst hentes fra [Display]-attributt i LogIn.cs for konsistens *@
                <label asp-for="Username" class="block text-sm font-medium text-gray-800 mb-1"></label>

                <input asp-for="Username"
                       class="block w-full border border-gray-300 rounded-xl px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-800"
                       placeholder="Username" />

                <span asp-validation-for="Username" class="text-sm text-red-600"></span>
            </div>

            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-800 mb-1"></label>

                <div class="relative">
                    <input asp-for="Password" 
                           id="passwordInput"
                           type="password"
                           class="block w-full border border-gray-300 rounded-xl px-3 py-2 pr-10 focus:outline-none focus:ring-2 focus:ring-green-800"
                           placeholder="Password" />

                    <button type="button"
                            id="togglePassword"
                            class="absolute right-3 top-2.5 text-gray-500 hover:text-gray-700 focus:outline-none transition-colors"
                            aria-label="Toggle password visibility">
                        @* Eye icon - visible when password is hidden *@
                        <svg id="eyeIconShow" class="w-5 h-5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 5C5.63636 5 2 12 2 12C2 12 5.63636 19 12 19C18.3636 19 22 12 22 12C22 12 18.3636 5 12 5Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M12 15C13.6569 15 15 13.6569 15 12C15 10.3431 13.6569 9 12 9C10.3431 9 9 10.3431 9 12C9 13.6569 10.3431 15 12 15Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                        
                        @* Eye slash icon - visible when password is shown *@
                        <svg id="eyeIconHide" class="w-5 h-5 hidden" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M3 3L21 21" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M10.5 10.5C10.1872 10.8128 9.99451 11.2346 9.99451 11.675C9.99451 12.1154 10.1872 12.5372 10.5 12.85C10.8128 13.1628 11.2346 13.3555 11.675 13.3555C12.1154 13.3555 12.5372 13.1628 12.85 12.85" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M9.5 5.62C10.3137 5.37801 11.1555 5.25553 12 5.25C18.3636 5.25 22 12.25 22 12.25C21.4796 13.1797 20.8917 14.0676 20.24 14.9075M6.5 6.5C4.26667 8.13333 2 12.25 2 12.25C2 12.25 5.63636 19.25 12 19.25C13.8988 19.25 15.5036 18.5571 16.9375 17.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </button>
                </div>

                <span asp-validation-for="Password" class="text-sm text-red-600"></span>
            </div>

            @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
            {
                <p class="text-red-600 text-sm">@ViewBag.ErrorMessage</p>
            }

            <div class="pt-2 flex justify-end">
                <button type="submit"
                        class="h-12 w-12 bg-green-800 rounded-full flex items-center justify-center hover:bg-green-900 transition"
                        title="Logg inn">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14M12 5l7 7-7 7" />
                    </svg>
                </button>
            </div>

        </form>

    </div>

    @* DEV NOTE / GRADING INFO:
       This section displays hardcoded credentials to facilitate testing and grading.
       In a production environment, this entire block would be removed to prevent security risks.
    *@
    <div class="bg-gray-50 border border-gray-300 rounded-2xl p-6 mt-6 space-y-4">
        
        <div class="bg-white rounded-lg p-4 border border-gray-200">
            <p class="text-sm font-medium text-gray-700">Admin</p>
            <p class="text-sm text-gray-600">Admin123</p>
        </div>

        <div class="bg-white rounded-lg p-4 border border-gray-200">
            <p class="text-sm font-medium text-gray-700">Registar</p>
            <p class="text-sm text-gray-600">Registar123</p>
        </div>

        <div class="bg-white rounded-lg p-4 border border-gray-200">
            <p class="text-sm font-medium text-gray-700">Pilot</p>
            <p class="text-sm text-gray-600">Pilot123</p>
        </div>

    </div>

</section>

@section Scripts {
    <script>
        // Toggle password visibility
        const togglePassword = document.getElementById('togglePassword');
        const passwordInput = document.getElementById('passwordInput');
        const eyeIconShow = document.getElementById('eyeIconShow');
        const eyeIconHide = document.getElementById('eyeIconHide');

        togglePassword.addEventListener('click', function() {
            // Toggle input type between password and text
            const isPassword = passwordInput.getAttribute('type') === 'password';
            passwordInput.setAttribute('type', isPassword ? 'text' : 'password');
            
            // Toggle icon visibility
            if (isPassword) {
                eyeIconShow.classList.add('hidden');
                eyeIconHide.classList.remove('hidden');
            } else {
                eyeIconShow.classList.remove('hidden');
                eyeIconHide.classList.add('hidden');
            }
        });
    </script>
}